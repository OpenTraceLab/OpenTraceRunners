FROM ubuntu:22.04

RUN apt-get update && apt-get install -y \
    build-essential meson ninja-build pkg-config git cmake \
    libglib2.0-dev libusb-1.0-0-dev python3-dev python3-pip \
    qt6-base-dev qt6-tools-dev libqt6svg6-dev \
    libftdi1-dev libserialport-dev libzip-dev libhidapi-dev \
    libnettle8-dev libieee1284-3-dev libgpib0-dev \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /workspace
